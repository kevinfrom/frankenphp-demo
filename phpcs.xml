<?xml version="1.0"?>
<ruleset name="FrankenPHP demo">
    <rule ref="PSR12"/>
    <file>app</file>
    <file>config</file>
    <file>core</file>
    <file>public</file>
    <file>views</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <arg name="extensions" value="php" />
    <arg name="report" value="summary" />
    <arg name="colors" />
    <arg value="sp" />
</ruleset>
